<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/twoplayerwordgame_register_dialog_title"
        android:gravity="center"
        android:paddingBottom="@dimen/twoplayerwordgame_dialog_text_padding" />

    <EditText
        android:id="@+id/twoplayerwordgame_register_dialog_username_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/twoplayerwordgame_register_dialog_edittext_hint"/>

</LinearLayout>